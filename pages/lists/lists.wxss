.container {
  height: 100%;
  padding: 0;
  /* border: 2px solid red; */
  display: flex;
  justify-content: flex-start;
  background-color: #eee;
  position: relative;
}
.container .images { width: 100%; }
.container .images .in-img {  
  height: 60rpx; 
  background-color: lightskyblue;
  text-align: center;
  color: white;
  font-weight: bold;
  padding-top: 18rpx;
  padding-bottom: 12rpx; 
}

.container .search-bar{
  width: 100%;
  height: 45rpx;
  background-color: white;
  padding-top:20rpx;
  padding-bottom: 30rpx;
  position: relative; 
}

.container .search-bar .search-img{
  height: 40rpx;
  width: 40rpx;
  top:25rpx;
  left:42rpx;
  position: absolute;
}

.container .search-bar input {
  height: 100%; 
  font-size: 26rpx;
  border: 1px solid lightblue;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-radius: 15rpx;
  padding-left: 42rpx;  
}
.container .search-bar .search-btn{
  color: lightskyblue;
  position: absolute;
  right: 60rpx;
  top:26rpx;
  font-size: 28rpx;
  text-decoration: underline;
}

.container .search-type{
  width: 100%;
  min-height: 60rpx;
  background-color: white;
  margin-top:18rpx;
  position: relative; 
